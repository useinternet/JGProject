


cbuffer PerFrameCB : register(b0)
{
    uint _AccumCount;
}

Texture2D<float>   _PrevFrame : register(t0);
Texture2D<float>   _CurFrame : register(t1);
RWTexture2D<float>   _Output : register(u0);



[numthreads( 8, 8, 1 )]
void cs_main(uint3 DTid : SV_DispatchThreadID) 
{
    float cur  = _CurFrame[DTid.xy];
    float prev = _PrevFrame[DTid.xy];

	_Output[DTid.xy] = (_AccumCount * prev + cur) / (_AccumCount + 1);
}