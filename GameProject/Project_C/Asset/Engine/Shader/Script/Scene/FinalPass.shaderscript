
_Resources{
	Texture2D LightTex;
	Texture2D ShadowTex;
	Texture2D Depth;

};

_Variables {

};

_Scene {
	float3 Lo     	 = LightTex.Sample(_LinearWrap, _input.tex).rgb;
	float Shadow     = ShadowTex.Sample(_LinearWrap, _input.tex).r;
	float depth 	 = Depth.Sample(_LinearWrap, _input.tex).r;

	if(depth >= 1.0f)
	{
		_output.final = float4(Lo, 1.0f);
	}
	else
	{
		_output.final = float4(Lo * Shadow, 1.0f);
	}

};

