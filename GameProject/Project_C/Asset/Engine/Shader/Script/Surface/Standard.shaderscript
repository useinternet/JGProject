
_Resources{
	Texture2D Tex1;
	Texture2D Tex2;
};

_Variables {
	float3 BaseColor;
	float  Roughness;
	float3 Specular;
	float  Metallc;
};

_Init {

};


_Surface {
	float4 textureColor = Tex1.Sample(_AnisotropicSampler, _input.tex);
	_output.albedo      = float4(BaseColor, 1.0f);
	_output.roughness   = Roughness;
	_output.specular    = Specular;
	_output.metallic    = Metallc;
};