
_Resources{
	Texture2D Albedo;
};

_Variables {
	float3 BaseColor;
	float  Roughness;
	float3 Specular;
	float  Metallc;
	float3 Emissive;
};

_Surface {
	float4 textureColor = Albedo.Sample(_AnisotropicWrap, _input.tex);
	_output.albedo      = textureColor * float4(BaseColor.rgb, 1.0f);
	_output.roughness   = Roughness;
	_output.specular    = Specular;
	_output.metallic    = Metallc;
	_output.emissive    = Emissive;
};