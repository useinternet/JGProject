
_Resources{
	Texture2D Tex1;
};

_Variables {
	float3 ApexColor;
	float  padding;
	float3 CenterColor;
};

_Surface {
	float3 outputColor;
	float height = _input.local_position.y;

	height = height;
	if(height < 0.0f)
	{
		height = 1.0f;
	}

    outputColor = lerp(CenterColor, ApexColor, height);


	_output.albedo  = float4(outputColor, 1.0f);
	_output.flags = SCRIPT_FLAG_IGNORE_LIGHTPASS;
};